<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/m_drawerLayout"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolBar"
        android:background="#F00"
        >
        <TextView
            android:id="@+id/title"
            android:text="天天半价"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingRight="20dp"
            android:text="爆料"
            android:id="@+id/baoLiao"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/m_viewPager"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/m_radionGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <RadioButton
                android:id="@+id/radio01"
                android:drawableTop="@drawable/radiobutton01"
                android:text="特价"
                style="@style/radioGroup"
                />
            <RadioButton
                android:id="@+id/radio02"
                android:drawableTop="@drawable/radiobutton02"
                android:text="爱逛"
                style="@style/radioGroup"
                />
            <RadioButton
                android:id="@+id/radio03"
                android:drawableTop="@drawable/radiobutton03"

                android:text="分类"
                style="@style/radioGroup"
                />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>

